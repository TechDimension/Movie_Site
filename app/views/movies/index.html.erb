
<h1>Movies</h1>
<h3>These are the featured movies: </h3>

<% results = [single_search('tt0316654', true), single_search('tt0478970', true),single_search('tt0848228', true) ,single_search('tt1524930', true), single_search('tt0113243', true), single_search('tt3416742', true)]%>
<% puts results %>
<%# results = search('spider', params[:sort_key])%>

<% if results != false%>
    <% results = results.sort_by{|n| n[params[:sort_key]]} %>
    <ul>
    <% results.each_slice(4) do |slice| %>
    <% slice.each do |r| %>
    <% r = single_search(r) %>
    <div class = 'col-sm-6 col-lg-4'><li><h4><%= link_to("#{r["Title"]} ( #{r["Year"]} )".truncate(30), "/movies/"+(r["imdbID"]).to_s)%></h4>
    <div style="height: 400px;"><%= link_to(image_tag(single_poster(r['imdbID']), :width => "200", :class =>"img-thumbnail"),  "/movies/"+(r["imdbID"]).to_s) %> </div>
    </li></div>
    <% end %>
    <% end %>
    </ul>
<% else %>

<p>No movies exist with that name... Soz </p>
<% end  %>


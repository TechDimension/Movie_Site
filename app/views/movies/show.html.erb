


<div class "container">
    <h2><%= "#{@movie["Title"]} ( #{@movie['Year']} ) ( IMDB Rating : #{@movie['imdbRating']} ) ( Rated : #{@movie['Rated']} )" %> </h2>
    <p/>
    <%=image_tag(single_poster(@movie['imdbID']), :width => "280", :align => 'right' )  %>
    <p align 'left'
    <p><%= @movie['Plot'] %> </p>
    <p/>
    <p><%="Director: #{@movie['Director']}"  %> </p>
    <p><%="Actors: #{@movie['actors']}"  %> </p>
    <p/>
    <p><%="Genre: #{@movie['Genre']}"  %> </p>
    </p>

    <p><%= link_to("More information on IMDB site", "http://www.imdb.com/title/#{@movie['imdbID'].to_s}/")%> </p>

    <h3><%="Reviews:"  %> </h3>
    <%= link_to 'Add Review', new_review_path%>
    <%= render partial: 'reviews', :locals => {:id => params[:id]} %>
</div>
<div><h1></h1></div>

<% results = series_search(@series_name.gsub('+',' '), params[:sort_key] , 10)%>
<%= puts results %>
<% puts 'aplle' %>
<% if results != false%>
    <ul>
    <% results.each_slice(2) do |slice| %>
    <% slice.each do |r| %>
    <% r = series_search(r['imdbID']) %>
    <div class = 'col-sm-6'><li><h4><%= link_to("#{r["Title"]} ( #{r["Year"]} )", "/series/"+(r["imdbID"]).to_s)%></h4>
    <div style="height: 400px;"><%= link_to(image_tag(single_poster(r['imdbID']), :width => "200", :class =>"img-thumbnail"),  "/series/"+(r["imdbID"]).to_s) %> </div>
    </li></div>
    <% end %>
    <% end %>
    </ul>

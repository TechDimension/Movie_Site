   <div class = "modal-dialog" >
        <div class = 'modal-content'>
            <div class="modal-header">
                <h4 class="modal-title">
                    <h3>Login</h3>

                    <%= form_tag(login_path) do %>
                        <p>
                            <%= label_tag(:email) %>
                        </p>
                        <p>
                            <%= text_field_tag(:email) %>
                        </p>
                        <p>
                            <%= label_tag(:password) %>
                        </p>
                        <p>
                            <%= password_field_tag %>
                        </p>
                        <p>
                            <%= submit_tag("Log in") %>
                        </p>
                    <% end %>
                </h4>
            </div>
        </div>
    </div>

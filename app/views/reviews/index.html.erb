    <h3><%="Reviews:"  %> </h3>
<% Review.all.reverse_each do |review| %>
                <div class="col-xs-5 col-sm-4 col-md-3 col-lg-2"  style ="height: 350;" >
                    <div style = "color:white; padding-left = 20px;"align= 'center' >
                    <p style = 'width=10px'><%= review.body.strip.truncate(15) %></p>
                    <% review_of = single_search("#{review.movie_id}", true) %>
                    <% if review_of['Type'] == 'movie' %>
                        <% type = 'movies' %>
                    <% else %>
                      <% type = 'series' %>
                    <% end %>
                     <div align= 'center' ><%= link_to(image_tag(review_of['Poster'] , :class => 'img-responsive' , :width => '80%') , "/#{type}/#{review_of['imdbID']}")%></div>

                        <% if current_user != nil %>
                            <% if current_user.level == 3 %>
                                <div style = 'width=10px'> <%= link_to "Delete Review", review_path(params[:id] , review), method: :delete, data: {confirm: "Are you sure you want to delete this review? "} %> </div>
                            <% end %>
                        <% end %>
                    </div>
                  </div>

<%end%>